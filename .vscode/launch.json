  "version": "0.2.0",
  "configurations": [
    {
      "name": "Agents Python Debugger: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}\\agent-management-system\\ai_agents",
          "remoteRoot": "/app"
        }
      ]
    },
    {
      "name": "JsonDb Python Debugger: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5680
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}\\agent-management-system\\json_db",
          "remoteRoot": "/app"
        }
      ]
    },
    {
      "name": "Backend Python Debugger: Remote Attach",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5679
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}\\agent-management-system\\backend",
          "remoteRoot": "/app"
        }
      ]
    }
  ]
}
